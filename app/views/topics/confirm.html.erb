<div class="container">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<h2>以下の内容で、送信する</h2>

<%= form_for(@topic) do |f| %>
  <%= f.hidden_field :content %>

  <p><%= @topic.content %></p>
  <%= f.submit "登録する", class: 'btn btn-primary btn-block' %>
<% end %>
<br>

<%= form_for(@topic, url: new_topic_path) do |f| %>
  <%= f.hidden_field :content %>
  <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn btn-block' %>
<% end %>
