<div class="container pb30">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p class="mb30"><%= notice %></p>

<h1>トピックス一覧</h1>

<div class="topic_write_area">
<div class="topic_write_inner">
<p class="mb10">内容</p>
<%= form_for(@topic, url: choose_new_or_edit) do |f| %>
  <%= f.error_messages! %>

  <% f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<!-- /.topic_write_inner --></div>
<!-- /.topic_write_area --></div>
<!--
<%= link_to "トピックスを作成する", new_topic_path, class: 'btn btn-primary mb30' %>
-->

<% @topics.each do |topic| %>
<div class="row comment_area">
<div class="inner_comment">
<div class="info_area clearfix">
<p class="topic_pic mb10"><%= image_tag(topic.user.image_url) %></p>
<p class="user_info mb30">投稿者：<%= topic.user.name %>&nbsp;<span><%= topic.created_at.strftime("%y/%m/%d %p %l:%M") %></span></p>
<!-- /.info_area --></div>
<%= link_to topic_path(topic) do %>
<p class="mb30"><%= topic.content %></p>
<% end %>
<div class="btn_area cf">
<%= link_to "投稿を編集する", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success left_btn' %>
<%= link_to "投稿を削除する", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger right_btn' %>
<!-- /.btn_area --></div>
<!-- /.inner_comment --></div>
<!-- /.row --></div>
<% end %>

<!-- /.wrapper --></div>
<!-- /.container --></div>

<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
