<div class="container">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p><%= notice %></p>

<h1>トピックス一覧</h1>

<%= link_to "トピックスを作成する", new_topic_path, class: 'btn btn-primary mb30' %>

<% @topics.each do |topic| %>
<div class="row">
<p><%= image_tag(topic.user.image_url) %></p>
<p class="mb10"><%= topic.content %></p>
<p>ユーザID：<%= topic.user_id %>&nbsp;ユーザ名：<%= topic.user.name %></p>
<div class="btn_area cf mb30">
<%= link_to "トピックスを編集する", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success left_btn' %>
<%= link_to "トピックスを削除する", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger right_btn' %>
<!-- /.btn_area --></div>
<!-- /.row --></div>
<% end %>

<!-- /.wrapper --></div>
<!-- /.container --></div>

<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
