<div class="container">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<h2>パスワード再設定</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_messages! %>

  <div class="field">
    <p class="mb10"><%= f.label :email %></p>
    <%= f.email_field :email, autofocus: true, class: "form-control mb30", placeholder: "メールアドレス" %>
  </div>

  <div class="actions">
    <%= f.submit "再設定メールを送信する", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
