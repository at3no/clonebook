<div class="container">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<h2>サインアップ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <p class="mb10"><%= f.label :email %></p>
    <%= f.email_field :email, autofocus: true, class: "form-control mb30", placeholder: "メールアドレス" %>
  </div>

  <div class="field mb30">
    <p class="mb10"><%= f.label :名前 %></p>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>

  <div class="field">
    <p class="mb10"><%= f.label :password %></p>
    <% if @minimum_password_length %>
    <em class="mb10">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control mb30", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <p class="mb10"><%= f.label :password_confirmation %></p>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control mb30", placeholder: "パスワード（確認）" %>
  </div>

  <div class="actions">
    <%= f.submit "サインアップ", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<!-- /.wrapper --></div>
<!-- /.container --></div>
