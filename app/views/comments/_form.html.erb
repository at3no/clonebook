<%= form_for([topic,comment], remote: true) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :topic_id %>
  <div class="field mb20">
    <%= f.text_field :content, placeholder: "内容", class: "form-control" %>
  </div>
  <div class="actions mb20">
    <%= f.submit "投稿", class: 'btn btn-default btn-sm btn-success' %>
  </div>
<% end %>
